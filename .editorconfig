# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{md}]
trim_trailing_whitespace = false

[*.{py,html,js}]
indent_size = 4

[*.{css,yml,yaml}]
indent_size = 2
